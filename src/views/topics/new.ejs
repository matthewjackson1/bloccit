<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
       <% include ../static/partials/messages.ejs %>
          <a class="back-link" href="/topics">< Back to all topics</a>
            <h1>New Topic</h1>

      
      <form action="/topics/create" method="post">
        <div class="form-group">
          <label for="title">Topic title</label>
          <input type="text" class="form-control" name="title" aria-describedby="titleHelp">
          <small class="text-muted" id="titleHelp">Minimum 5 characters.</small>
      </div>
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea rows="4" class="form-control" name="description"></textarea>
          <small class="text-muted" id="bodyHelp">Minimum 10 characters.</small>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/topics" class="btn btn-secondary btn">Cancel</a>
      </form>

    </main>

  </body>
</html>